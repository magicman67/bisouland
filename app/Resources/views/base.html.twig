<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        {% block meta %}{% endblock %}

        <title>
            {% block title %}Bisouland v2{% endblock %}
        </title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/bisoulandfront/css/theme.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/bisoulandfront/css/dl.css') }}" />
        {% endblock %}
            
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        {% block favicons %}
            <link rel="shortcut icon" href="{{ asset('bundles/bisoulandfront/images/favicon.ico') }}" />
            <link rel="apple-touch-icon" href="{{ asset('bundles/bisoulandfront/images/apple-touch-icon.png') }}">
            <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('bundles/bisoulandfront/images/apple-touch-icon-72x72.png') }}">
            <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('bundles/bisoulandfront/images/apple-touch-icon-114x114.png') }}">
        {% endblock %}
    </head>
    
    <body>
        <header class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="{{ path('homepage') }}">
                        Bisouland
                    </a>
                    <nav class="nav-collapse collapse">
                        {{ knp_menu_render("BisoulandFrontBundle:Builder:mainMenu", {"currentClass": "active"}) }}
                    </nav>
                </div>
            </div>
        </header>

        <div class="container">
            {% render 'BisoulandBeingsBundle:Update:index' %}
            {% render 'BisoulandBeingsBundle:Selection:index' %}

            <div class="content">
                {% block view %}{% endblock %}
            </div>

            <footer id="layout-footer" class="row">
                    <nav class="span6">
                        <h2>Statistiques</h2>

                        {% render 'BisoulandBeingsBundle:Statistics:index' %}
                    </nav>

                    <nav class="span6">
                        <h2>Cr&eacute;dits</h2>

                        <ul>
                            <li><a href="http://www.piwai.info/" title="Auteur original">Piwa&iuml;</a></li>
                            <li><a href="https://github.com/pyricau/bisouland" title="D&eacute;p&ocirc;t des sources">Code source</a></li>
                            <li><a href="http://symfony.com/" title="Symfony2 framework">Symfony</a></li>
                            <li><a href="http://www.styleshout.com/" title="CSS template et ressources">Styleshout</a></li>
                        </ul>
                    </nav>
            </footer>
        </div>

        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
    </body>
    
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>

    {% block javascript %}{% endblock %}
</html>
