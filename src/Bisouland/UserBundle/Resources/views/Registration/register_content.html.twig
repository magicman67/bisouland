{{ form_start(form, {
    'action': path('fos_user_registration_register')
}) }}
    <fieldset>
        {{ form_errors(form) }}

        {{ form_row(form.email) }}
        {{ form_row(form.username) }}
        {{ form_row(form.plainPassword) }}

        <input type="submit" class="button" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
    </fieldset>
{{ form_end(form) }}
