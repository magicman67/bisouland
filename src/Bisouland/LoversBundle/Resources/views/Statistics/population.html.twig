<dl id="population_statistics" class="dl-horizontal statistics">
    <dt>
        Coups de foudre du jour
    </dt>
    <dd class="number">
        {{ numberOfLoversGeneratedToday }}
    </dd>

    <dt>
        Coeur bris&eacute;s
    </dt>
    <dd class="number">
        {{ numberOfLosers }}
    </dd>

    <dt>
        Amoureux restant
    </dt>
    <dd class="number">
        {{ numberOfOthers }}
    </dd>
</dl>

<script type="text/javascript">
    google.load('visualization', '1', { packages:['corechart'] })
    google.setOnLoadCallback(drawPopulationChart)
    function drawPopulationChart() {
        var data = google.visualization.arrayToDataTable([
            ['Type', 'Nombre']
            , ['Coups de foudre du jour', {{ numberOfLoversGeneratedToday }}]
            , ['Coeurs fendus', {{ numberOfLosers }}]
            , ['Amoureux restant', {{ numberOfOthers }}]
        ])

        var options = {'title': 'statistiques'}

        var chart = new google.visualization.PieChart(document.getElementById('population_statistics'))
        chart.draw(data, options)
    }
</script>
